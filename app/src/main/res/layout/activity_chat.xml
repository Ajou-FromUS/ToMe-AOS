<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_sub2">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:background="#66000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:id="@+id/tome_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tome_logo"
            android:layout_marginTop="45dp"
            android:layout_marginStart="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/tv_talk_with_TO"
            android:layout_width="142dp"
            android:layout_height="34dp"
            android:text="@string/talk_with_TO"
            android:textAppearance="@style/text_body1"
            android:textColor="@color/color_font1"
            android:gravity="center"
            android:layout_marginTop="16.4dp"
            app:layout_constraintTop_toBottomOf="@id/tome_logo"
            app:layout_constraintStart_toStartOf="@id/tome_logo"/>
    <Button
            android:layout_width="85dp"
            android:layout_height="26dp"
            android:text="@string/end_chat"
            android:textColor="@color/color_font4"
            android:textAppearance="@style/text_body2"
            android:background="@drawable/btn_basic_4dp_stroke"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_talk_with_TO"
            style="?android:attr/borderlessButtonStyle"/>
    <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/ibtn_chat_question"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_chat_question_stroke"
            android:elevation="2dp"
            android:outlineSpotShadowColor="@color/color_main"
            android:layout_marginTop="38dp"
            android:layout_marginStart="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_talk_with_TO"/>
    <TextView
            android:id="@+id/tv_chat_inst"
            android:layout_width="232dp"
            android:layout_height="73dp"
            android:text="@string/chat_inst"
            android:textAppearance="@style/text_body2"
            android:textColor="@color/color_font2"
            android:background="@drawable/btn_basic_4dp"
            android:lineSpacingMultiplier="1.3"
            android:paddingStart="14.5dp"
            android:paddingTop="14dp"
            android:paddingBottom="11dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/ibtn_chat_question"
            app:layout_constraintTop_toTopOf="@id/ibtn_chat_question"
            android:visibility="invisible"/>
    <ProgressBar
            android:id="@+id/pgbar_chat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:progress="3"
            android:max="3"
            android:progressDrawable="@drawable/progressbar"
            android:indeterminate="false"
            android:progressTint="@color/color_main"
            android:background="@color/color_transparent"
            android:progressBackgroundTint="@color/color_sub2"
            android:layout_marginEnd="27dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ibtn_chat_question"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="155dp"
            android:paddingHorizontal="26dp"
            android:background="@color/color_transparent"
            app:layout_constraintBottom_toTopOf="@id/et_chat_talk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:overScrollMode="never"/>
    <EditText
            android:id="@+id/et_chat_talk"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_basic_8dp_noripple"
            android:backgroundTint="@color/color_disabled2"
            android:paddingStart="26dp"
            android:paddingEnd="46dp"
            android:paddingVertical="15dp"
            android:hint="티오에게 메시지 보내기"
            android:textAppearance="@style/text_body1"
            android:textColorHint="@color/color_font3"
            android:textColor="@color/color_font1"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginBottom="74dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="3"
            android:imeOptions="actionDone"/>
    <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/ibtn_chat_send"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:src="@drawable/ic_chat_send_dis"
            android:backgroundTint="@color/color_transparent"
            android:layout_marginEnd="5.76dp"
            app:layout_constraintEnd_toEndOf="@id/et_chat_talk"
            app:layout_constraintBottom_toBottomOf="@id/et_chat_talk"
            app:layout_constraintTop_toTopOf="@id/et_chat_talk"/>

</androidx.constraintlayout.widget.ConstraintLayout>