<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="presentation.mission.MissionFragment"
                                                   android:background="@color/mission_background"
                                                   android:id="@+id/mission_layout">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today_mission" android:id="@+id/today_mission_text"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="151dp"/>
    <ImageView
            android:src="@drawable/btn_basic_24dp"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/check_mission1"
            app:srcCompat="@drawable/ic_mission_uncomplete"
            android:scaleType="fitCenter" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@+id/check_mission2"
            app:layout_constraintTop_toBottomOf="@+id/today_mission_text" android:layout_marginTop="12dp"
            android:background="@color/color_transparent"/>
    <ImageView
            android:src="@drawable/btn_basic_24dp"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/check_mission3"
            app:srcCompat="@drawable/ic_mission_uncomplete"
            android:scaleType="fitCenter" app:layout_constraintStart_toEndOf="@+id/check_mission2"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/check_mission2"/>
    <ImageView
            android:src="@drawable/btn_basic_24dp"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/check_mission2"
            app:srcCompat="@drawable/ic_mission_uncomplete"
            android:scaleType="fitCenter" app:layout_constraintStart_toEndOf="@+id/check_mission1"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/check_mission3"
            app:layout_constraintTop_toTopOf="@+id/check_mission1"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/check_mission2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:paddingHorizontal="27dp" android:layout_marginTop="30dp">
        <include layout="@layout/item_mission_box"
                 android:layout_marginTop="0dp" android:id="@+id/mission_box1" android:layout_width="match_parent"
                 android:layout_height="wrap_content"></include>
        <include layout="@layout/item_mission_box"
                 android:layout_marginTop="12dp" android:id="@+id/mission_box2" android:layout_width="match_parent"
                 android:layout_height="wrap_content"></include>
        <include layout="@layout/item_mission_box"
                 android:layout_marginTop="12dp" android:id="@+id/mission_box3" android:layout_width="match_parent"
                 android:layout_height="wrap_content"></include>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>