<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="presentation.archive.ArchiveSave"
             android:background="#80FCFCFC">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_saveSure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_sure"
                android:textAppearance="@style/text_subtitle1"
                android:textColor="@color/color_font1"

                android:layout_marginTop="105dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
                android:id="@+id/tv_saveWarn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_warn"
                android:textAppearance="@style/text_body1"
                android:textColor="@color/color_font2"

                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_saveSure"
        />

        <LinearLayout
                android:layout_width="308dp"
                android:layout_height="328dp"
                android:orientation="vertical"
                android:background="@drawable/round_box_8dp"
                android:layout_marginTop="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_saveWarn">

            <Button
                    android:layout_width="308dp"
                    android:layout_height="52dp"
                    android:text="@string/save_yes"
                    android:textAppearance="@style/text_body1"
                    android:textColor="@color/color_font4"
                    android:background="@drawable/btn_basic_8dp"
                    style="?android:attr/borderlessButtonStyle"/>
            <Button
                    android:layout_width="308dp"
                    android:layout_height="52dp"
                    android:text="@string/save_no"
                    android:textAppearance="@style/text_body1"
                    android:textColor="@color/color_font2"
                    android:background="@drawable/btn_basic_8dp"
                    android:backgroundTint="@color/color_disabled1"
                    android:layout_marginTop="12dp"
                    style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>