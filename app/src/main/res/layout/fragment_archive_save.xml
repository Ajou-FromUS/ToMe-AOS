<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:background="@color/color_font1"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="presentation.archive.ArchiveSave">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_archiveSave"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:id="@+id/tv_saveSure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_sure"
                android:textAppearance="@style/text_subtitle1"
                android:textColor="@color/color_font1"

                android:layout_marginTop="105dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/tv_saveWarn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_warn"
                android:textAppearance="@style/text_body1"
                android:textColor="@color/color_font2"

                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_saveSure"/>

        <LinearLayout
                android:id="@+id/linear_archiveSave"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/round_box_8dp"
                android:layout_marginTop="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_saveWarn">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01."
                    android:textSize="36sp"
                    android:layout_marginTop="46dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="@color/color_main"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 별명은??"
                    android:layout_marginTop="6dp"
                    android:textAppearance="@style/text_subtitle2"
                    android:textColor="@color/color_font1"
                    android:layout_marginBottom="12dp"/>
            <TextView
                    android:id="@+id/tv_archive_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/text_subtitle2"
                    android:textColor="@color/color_font2"/>
            <TextView
                    android:id="@+id/tv_is"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입니다."
                    android:textAppearance="@style/text_subtitle2"
                    android:textColor="@color/color_font1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="46dp"/>
        </LinearLayout>

        <Button
                android:id="@+id/btn_save"
                android:layout_width="308dp"
                android:layout_height="52dp"
                android:text="@string/save_yes"
                android:textAppearance="@style/text_body1"
                android:textColor="@color/color_font4"
                android:background="@drawable/btn_basic_8dp"
                android:layout_marginTop="11dp"
                app:layout_constraintTop_toBottomOf="@id/linear_archiveSave"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="?android:attr/borderlessButtonStyle"/>

        <Button
                android:id="@+id/btn_no_save"
                android:layout_width="308dp"
                android:layout_height="52dp"
                android:text="@string/save_no"
                android:textAppearance="@style/text_body1"
                android:textColor="@color/color_font2"
                android:background="@drawable/btn_basic_8dp"
                android:backgroundTint="@color/color_disabled1"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/btn_save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="?android:attr/borderlessButtonStyle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>