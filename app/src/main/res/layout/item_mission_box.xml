<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@drawable/round_box_mission"
        android:gravity="center_vertical" android:clickable="true"
        android:layout_marginBottom="12dp" android:id="@+id/mission_box" android:layout_marginHorizontal="27dp"
        android:paddingVertical="14dp" android:paddingLeft="19dp" android:paddingRight="17dp">
    <ImageView
            android:src="@drawable/img_mission_camera"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/mission_image"
            android:scaleType="fitCenter"
            android:layout_marginRight="15dp" android:layout_weight="1"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="@string/mission_title_photo"
                android:layout_width="match_parent"
                android:textAppearance="@style/text_body2"
                android:layout_height="wrap_content" android:id="@+id/mission_title"
                android:textColor="@color/color_font2" android:layout_marginBottom="4dp"/>
        <View
                android:id="@+id/mission_divider"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
        />
        <TextView
                android:text="@string/mission_body"
                android:layout_width="match_parent"
                android:textAppearance="@style/new_text_body3"
                android:layout_height="wrap_content" android:id="@+id/mission_body"
                android:textColor="@color/color_font1" android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>