<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="presentation.landing.ThirdFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/landing_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 3."
                android:textAppearance="@style/AOS_b3"

                android:layout_marginTop="166dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/landing_step3"
                android:textAppearance="@style/AOS_h4"

                android:layout_marginTop="6dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/landing_step"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/landing_step3_sub"
                android:textColor="@color/tome_disabled"
                android:textAppearance="@style/AOS_b3"

                android:layout_marginTop="34dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/landing_step"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>