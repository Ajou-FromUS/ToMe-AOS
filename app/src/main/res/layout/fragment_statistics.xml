<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_font4"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/tome_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tome_logo"
            android:layout_marginTop="45dp"
            android:layout_marginStart="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/tv_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statistics"
            android:textAppearance="@style/new_body2"
            android:textColor="@color/color_font1"
            android:layout_marginTop="16.4dp"
            app:layout_constraintTop_toBottomOf="@id/tome_logo"
            app:layout_constraintStart_toStartOf="@id/tome_logo"/>
    <View
            android:id="@+id/statistics_border_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_disabled2"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/tv_statistics"/>
    <ScrollView
            android:id="@+id/sv_statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:paddingBottom="90dp"
            app:layout_constraintTop_toBottomOf="@id/statistics_border_line">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:background="@color/color_statistics_background"
                android:layout_marginBottom="47dp">
            <RelativeLayout
                    android:id="@+id/stats_first_block"
                    android:layout_width="match_parent"
                    android:layout_height="111dp"
                    android:background="@color/color_font4"
                    android:layout_marginBottom="47dp"
                    android:layout_alignParentTop="true">
                <LinearLayout
                        android:id="@+id/stats_popup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="27dp">
                    <TextView
                            android:id="@+id/tv_stat_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/color_font1"
                            android:textAppearance="@style/text_subtitle2"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_statistics_popup"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"/>
                </LinearLayout>
                <TextView
                        android:id="@+id/tv_analyze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/statistics_analyzed"
                        android:fontFamily="@font/leeseoyun"
                        android:textSize="12sp"
                        android:textColor="@color/color_font1"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="27dp"
                        android:layout_centerVertical="true"/>
                <ImageView
                        android:layout_width="119dp"
                        android:layout_height="76dp"
                        android:src="@drawable/img_conan_tox2"
                        android:layout_marginBottom="23dp"
                        android:layout_marginEnd="27dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/stats_second_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/color_font4"
                    android:layout_marginBottom="36dp"
                    android:paddingBottom="30dp"
                    android:layout_below="@id/stats_first_block">
                <TextView
                        android:id="@+id/tv_second_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_keyword"
                        android:textColor="@color/color_font1"
                        android:textAppearance="@style/text_subtitle2"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="27dp"/>
                <ImageView
                        android:id="@+id/iv_monthly_keyword"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/stats_third_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/color_font4"
                    android:layout_marginBottom="50dp"
                    android:paddingBottom="20dp"
                    android:layout_below="@id/stats_second_block">
                <TextView
                        android:id="@+id/tv_third_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_emotion"
                        android:textColor="@color/color_font1"
                        android:textAppearance="@style/text_subtitle2"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="27dp"/>
                <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"/>
                <TextView
                        android:id="@+id/tv_emotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="@style/text_body2"
                        android:textColor="@color/color_font2"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/stats_fourth_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/color_font4"
                    android:layout_marginBottom="103dp"
                    android:paddingBottom="20dp"
                    android:layout_below="@id/stats_third_block">
                <TextView
                        android:id="@+id/tv_fourth_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_mission_progress"
                        android:textColor="@color/color_font1"
                        android:textAppearance="@style/text_subtitle2"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="27dp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_contribution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"/>
                <TextView
                        android:id="@+id/tv_contribution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지난 달에 비해 접속한 횟수가 증가했어요!"
                        android:textAppearance="@style/text_body2"
                        android:textColor="@color/color_font2"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>