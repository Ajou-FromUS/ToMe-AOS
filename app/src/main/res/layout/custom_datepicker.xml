<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <NumberPicker
            android:id="@+id/yearpicker_datepicker"
            android:layout_width="0dp"
            android:layout_height="124dp"
            android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/monthpicker_datepicker"
            app:layout_constraintTop_toTopOf="parent"
            android:theme="@style/NumberPicker"/>

    <NumberPicker
            android:id="@+id/monthpicker_datepicker"
            android:layout_width="0dp"
            android:layout_height="124dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintStart_toEndOf="@+id/yearpicker_datepicker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:theme="@style/NumberPicker"/>

    <Button
            android:id="@+id/btn_date_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color_font4"
            android:text="취소"
            android:textAppearance="@style/text_subtitle2"
            android:textColor="@color/color_font1"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/monthpicker_datepicker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_date_save"/>
    <Button
            android:id="@+id/btn_date_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color_main"
            android:text="완료"
            android:textAppearance="@style/text_subtitle2"
            android:textColor="@color/color_font4"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/monthpicker_datepicker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_date_cancel"/>

</androidx.constraintlayout.widget.ConstraintLayout>