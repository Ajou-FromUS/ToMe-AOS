<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="presentation.login.LoginActivity">
    <ImageView
            android:id="@+id/iv_face_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_splash_face_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_bias="0.3"/>
    <TextView
            android:id="@+id/tv_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나를 위한 웰니스 기록 서비스"
            android:textAppearance="@style/text_body2"
            android:textColor="@color/color_sub3"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toEndOf="@id/iv_face_logo"
            app:layout_constraintBottom_toTopOf="@id/iv_text_logo"/>
    <ImageView
            android:id="@+id/iv_text_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_splash_logo"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toEndOf="@id/iv_face_logo"
            app:layout_constraintBottom_toBottomOf="@id/iv_face_logo"/>


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kakao"
            android:layout_width="308dp"
            android:layout_height="48dp"
            android:text="@string/login_kakao"
            android:textAppearance="@style/text_body1"
            android:textColor="@color/color_font1"
            android:background="@drawable/btn_kakao_yellow"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_google"
            style="?android:attr/borderlessButtonStyle"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_google"
            android:layout_width="308dp"
            android:layout_height="48dp"
            android:textAllCaps="false"
            android:text="@string/login_google"
            android:textAppearance="@style/text_body1"
            android:textColor="@color/color_font1"
            android:background="@drawable/btn_google_transparent"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_visitor"
            style="?android:attr/borderlessButtonStyle"/>

    <TextView
            android:id="@+id/tv_visitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_visitor"
            android:textAppearance="@style/text_body2"
            android:textColor="@color/color_font3"
            android:layout_marginBottom="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>