<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="6dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:id="@+id/tv_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/chat_message_send_16dp"
            android:text=""
            android:textAppearance="@style/text_body2"
            android:textColor="@color/color_font1"
            android:layout_marginBottom="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:visibility="visible"/>
    <TextView
            android:id="@+id/tv_receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/chat_message_receive_16dp"
            android:text=""
            android:textAppearance="@style/text_body2"
            android:textColor="@color/color_font4"
            android:layout_marginBottom="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:visibility="gone"/>

</RelativeLayout>