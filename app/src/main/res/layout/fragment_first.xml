<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="presentation.landing.FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_landing_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 1."
                android:textAppearance="@style/text_body2"
                android:textColor="@color/color_font1"
                android:layout_marginTop="166dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/landing_step1"
                android:textAppearance="@style/text_subtitle1"
                android:textColor="@color/color_font1"
                android:lineHeight="28sp"
                android:layout_marginTop="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_landing_step"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>