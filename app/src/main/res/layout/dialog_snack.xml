<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/frameLayout">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:background="@drawable/btn_basic_8dp"
                android:paddingVertical="60dp"
                android:backgroundTint="@color/color_font4" android:paddingHorizontal="83dp" android:gravity="center">
            <TextView
                    android:text="@string/snack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/text_snack"
                    android:textAppearance="@style/text_title2"
                    android:layout_marginTop="38dp"
                    android:textColor="@color/color_font1"/>
            <TextView
                    android:text="@string/snack_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/text_snack_detail"
                    android:textAppearance="@style/text_body2"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/color_font3"/>
            <TextView
                    android:text="+3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    android:textAppearance="@style/text_title2"
                    android:layout_marginTop="26dp"
                    android:background="@drawable/btn_dotted_circle" android:textAlignment="center"
                    android:textColor="@color/color_snack_text"/>
            <ImageView
                    android:layout_width="125dp"
                    android:layout_height="165dp" app:srcCompat="@drawable/ic_snack" android:id="@+id/image_snack"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="16dp"
            />
        </LinearLayout>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_close_popup"
                android:id="@+id/closeBtn_top" android:background="@color/color_transparent"
                android:scaleType="fitCenter"
                android:layout_marginTop="13dp"
                android:layout_marginRight="15dp"
                android:padding="5dp" android:layout_gravity="right"/>
    </FrameLayout>
    <Button
            android:text="@string/btn_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/closeBtn"
            android:textColor="@color/color_font1"
            android:backgroundTint="@color/color_disabled1"
            app:layout_constraintStart_toStartOf="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout" app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            android:layout_marginTop="13dp" android:background="@drawable/btn_basic_8dp_noripple"/>
</androidx.constraintlayout.widget.ConstraintLayout>