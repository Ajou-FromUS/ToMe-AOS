<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingHorizontal="27dp">
    <TextView
            android:id="@+id/tome_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toMe"
            android:fontFamily="@font/ydestreetl"
            android:textColor="@color/color_font1"
            android:textSize="12sp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:textAppearance="@style/text_title2"
            android:textColor="@color/color_font1"
            app:layout_constraintTop_toBottomOf="@id/tome_logo"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_intro"
            android:textAppearance="@style/new_body3"
            android:textColor="@color/color_font1"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@id/tv_signup"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toMe"
            android:fontFamily="@font/ydestreetl"
            android:textColor="@color/color_font1"
            android:textSize="12sp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/btn_basic_8dp_noripple"
            android:backgroundTint="@color/color_disabled1"
            android:text="@string/signup_button"
            android:textAppearance="@style/text_body1"
            android:textColor="@color/color_font3"
            android:layout_marginBottom="46dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:enabled="false"
            style="@style/Widget.AppCompat.Button.Borderless"/>


</androidx.constraintlayout.widget.ConstraintLayout>