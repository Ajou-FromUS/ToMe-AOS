<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingHorizontal="20dp">
    <TextView
            android:id="@+id/tome_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toMe"
            android:fontFamily="@font/ydestreetl"
            android:textColor="@color/color_font1"
            android:textSize="12sp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:textAppearance="@style/text_title2"
            android:textColor="@color/color_font1"
            app:layout_constraintTop_toBottomOf="@id/tome_logo"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_intro"
            android:textAppearance="@style/new_body3"
            android:textColor="@color/color_font1"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@id/tv_signup"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toMe"
            android:fontFamily="@font/ydestreetl"
            android:textColor="@color/color_font1"
            android:textSize="12sp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nickname"
            android:textAppearance="@style/text_body2"
            android:textColor="@color/color_disabled1"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@id/tv_signup"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_nickname"
            app:layout_constraintBottom_toTopOf="@id/border_nickname"
            android:background="@color/color_transparent"/>
    <View
            android:id="@+id/border_nickname"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_disabled1"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nickname"/>
    <TextView
            android:id="@+id/tv_birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birthdate"
            android:textAppearance="@style/text_body2"
            android:textColor="@color/color_disabled1"
            android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nickname"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:id="@+id/et_birthdate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_birthdate"
            app:layout_constraintBottom_toTopOf="@id/border_birthdate"
            android:background="@color/color_transparent"/>
    <View
            android:id="@+id/border_birthdate"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_disabled1"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@id/tv_birthdate"/>
    <CheckBox
            android:id="@+id/chk_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_checkbox"
            android:button="@null"
            app:layout_constraintTop_toTopOf="@id/tv_policy"
            app:layout_constraintBottom_toBottomOf="@id/tv_policy"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/tv_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_policy"
            android:textAppearance="@style/text_body2"
            android:textColor="@color/color_font3"
            android:layout_marginTop="55dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/chk_policy"
            app:layout_constraintTop_toBottomOf="@id/tv_birthdate"/>
    <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/btn_basic_8dp_noripple"
            android:backgroundTint="@color/color_disabled1"
            android:text="@string/signup_button"
            android:textAppearance="@style/text_body1"
            android:textColor="@color/color_font3"
            android:layout_marginBottom="46dp"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:enabled="false"
            style="@style/Widget.AppCompat.Button.Borderless"/>
</androidx.constraintlayout.widget.ConstraintLayout>