<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="presentation.landing.FifthFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/landing_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 5."
                android:textAppearance="@style/AOS_b3"

                android:layout_marginTop="166dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/landing_step5"
                android:textAppearance="@style/AOS_h4"
                android:gravity="center"

                android:layout_marginTop="6dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/landing_step"/>

        <Button
                android:id="@+id/btn_start_tome"
                android:layout_width="332dp"
                android:layout_height="58dp"
                android:text="@string/landing_button"
                android:textColor="@color/tome_background_white"
                android:textAppearance="@style/AOS_h6"
                android:layout_marginBottom="83dp"

                android:background="@drawable/btn_basic_blue"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="?android:attr/borderlessButtonStyle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>