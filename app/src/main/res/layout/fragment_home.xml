<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="presentation.home.HomeFragment"
        android:id="@+id/home_layout">
    <Button
            android:text="@string/to_start_Talk"
            android:layout_width="125dp"
            android:layout_height="125dp" android:id="@+id/to_talk_btn"
            android:textAppearance="@style/text_body2"
            android:textColor="@color/color_sub3"
            android:background="@drawable/img_bubble_btn" android:drawableTop="@drawable/ic_talking_main"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="365dp" android:paddingTop="20dp"
            android:drawablePadding="-20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.18"/>
    <Button
            android:text="@string/check_mission"
            android:layout_width="125dp"
            android:layout_height="125dp" android:id="@+id/check_mission_btn"
            android:textAppearance="@style/text_body2"
            android:textColor="@color/color_sub3"
            android:background="@drawable/img_bubble_btn" android:drawableTop="@drawable/ic_mission"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="254dp" app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="20dp" android:drawablePadding="-20dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.8"/>
    <ImageView
            android:src="@drawable/img_tome"
            android:layout_width="148dp"
            android:layout_height="128dp" android:id="@+id/tome_image"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="522dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="196dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.56"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>