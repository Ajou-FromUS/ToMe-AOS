<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="presentation.home.HomeFragment"
        android:background="@color/black">
    <ImageButton
            android:src="@drawable/ic_snack"
            android:layout_width="43dp"
            android:layout_height="wrap_content" android:id="@+id/imageButton"
            android:background="@color/color_transparent"
            app:layout_constraintTop_toBottomOf="@+id/snack_text" android:layout_marginTop="4dp"
            android:scaleType="fitCenter" app:layout_constraintStart_toStartOf="@+id/snack_text"
            app:layout_constraintEnd_toEndOf="@+id/snack_text" app:layout_constraintHorizontal_bias="0.6"/>
    <TextView
            android:text="@string/snack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/snack_text"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/status_box"
            android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="@+id/status_box"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="136dp"
            android:layout_height="51dp"
            android:background="@drawable/btn_basic_8dp"
            android:backgroundTint="#90FFFFFF"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/status_box"
            android:layout_marginStart="20dp"
            android:layout_marginTop="170dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/lv_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/text_subtitle2"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="16dp"

                    android:id="@+id/lv_"
                    android:textSize="16sp"
                    android:textColor="@color/color_font1"
            />
            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
            />
            <TextView
                    android:text="@string/lv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/lv_icon"
                    android:layout_weight="0"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="17dp"
            />
        </LinearLayout>
        <ProgressBar
                android:max="100"
                android:progress="50"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/progressbar"
                android:layout_width="113dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="11dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_book_align"
            android:layout_width="25.6dp"
            android:layout_height="26dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="169dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
            android:src="@drawable/ic_home_book"
            app:backgroundTint="@color/color_transparent" app:borderWidth="0dp" app:fabSize="normal"
            app:elevation="0dp" app:hoveredFocusedTranslationZ="0dp" app:pressedTranslationZ="0dp"
            android:clickable="true" android:visibility="gone"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_store"
            android:src="@drawable/ic_store"
            android:layout_width="26.9dp"
            android:layout_height="26dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="169dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
            android:clickable="true"
            app:backgroundTint="@color/color_transparent" app:fabSize="normal" app:elevation="0dp"
            app:hoveredFocusedTranslationZ="0dp" app:pressedTranslationZ="0dp" app:borderWidth="0dp"
            android:visibility="gone"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_main"
            android:src="@drawable/select_mainfab"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="169dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
            app:icon="@drawable/select_mainfab"
            app:backgroundTint="@color/color_transparent" app:rippleColor="@color/color_disabled1"
            app:elevation="0dp" app:borderWidth="0dp" android:visibility="visible"/>
    <ImageView
            android:layout_width="170dp"
            android:layout_height="260dp" android:src="@drawable/btn_basic_8dp" android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="300dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/main_bubble1"
            android:text="@string/whatToday"
            android:layout_width="89dp"
            android:layout_height="45dp"
            android:textAppearance="@style/text_body3"
            android:background="@drawable/img_minimessage"
            android:gravity="center" android:textColor="@color/color_font2"
            app:layout_constraintEnd_toEndOf="@+id/imageView3" android:layout_marginEnd="132dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" android:layout_marginBottom="208dp"/>
    <TextView
            android:id="@+id/main_bubble2"
            android:text="@string/todayFeeling"
            android:layout_width="47dp"
            android:layout_height="45dp"
            android:textAppearance="@style/text_body3"
            android:background="@drawable/img_minimessage"
            android:gravity="center" android:textColor="@color/color_font2"
            app:layout_constraintTop_toTopOf="@+id/imageView3" app:layout_constraintStart_toStartOf="@+id/imageView3"
            android:layout_marginTop="196dp" android:layout_marginStart="156dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>